<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:id="@+id/closed"
        android:drawable="@drawable/mail_closed"
        android:state_checked="false" />

    <item
        android:id="@+id/open"
        android:drawable="@drawable/mail_open"
        android:state_checked="true" />

    <transition
        android:drawable="@drawable/mail_open_to_closed"
        android:fromId="@id/open"
        android:toId="@id/closed" />

    <transition
        android:drawable="@drawable/mail_closed_to_open"
        android:fromId="@id/closed"
        android:toId="@id/open" />

</animated-selector>
